<?xml version="1.0"?>
<PropertyList>
	<meta>
		<file-type type="string">FlightGear add-on menu bar items</file-type>
		<format-version type="int">1</format-version>
	</meta>

	<menubar-items>
		<menu>
			<label>Target dropping</label>
			<enabled type="bool">true</enabled>
			
			<item>
				<label>Place pod in front of aircraft</label>
				<binding>
					<command>nasal</command>
					<script>targetDropping.pod.place();</script>
				</binding>
			</item>
			<item>
				<label>Attach / detach pod</label>
				<binding>
					<command>nasal</command>
					<script>targetDropping.pod.clicked();</script>
				</binding>
			</item>
			<item>
				<label>Reload addon</label>
				<binding>
					<command>addon-reload</command>
					<id>org.flightgear.addons.target-dropping</id>
				</binding>
			</item> 
		</menu>
	</menubar-items>
</PropertyList>
